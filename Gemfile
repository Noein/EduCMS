source 'http://rubygems.org'

gem 'rails', '3.2.1'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
end

group :test do
  gem 'turn', :require => false
  gem 'rspec'
  gem 'spork'
  gem 'webrat'
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'execjs'

# JavaScript engine (v8) binding
gem 'therubyracer', '0.9.9'

# Paginator
gem 'will_paginate'

 # Autentification users
gem 'sorcery', :git => "git://github.com/NoamB/sorcery.git"

# File uploading
gem 'carrierwave'

# File uploading on Google Storage
# gem 'fog'

# Key/value store
gem 'ledermann-rails-settings', :require => 'rails-settings'

# Nested forms for tests
gem "nested_form", :git => "git://github.com/ryanb/nested_form.git"

# Text formatting
gem 'RedCloth'

# Multi-condition search
gem 'railswhere'

# plugin https://github.com/jongilbraith/simple-private-messages.git

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the web server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'ruby-debug19', :require => 'ruby-debug'
