<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label "Имя пользователя" %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label "Настоящее имя" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Фамилия" %><br />
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.label "Отчество" %><br />
    <%= f.text_field :patronimic %>
  </div>
  <p>
    <%= f.label "Группа" %><br />
    <%= f.select(:group_id, options_from_collection_for_select(Group.all, 'id', 'title'), { :prompt => 'Выберите группу' }) %>
  </p>
  <div class="field">
    <%= f.label "Электронная почта" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Пароль" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>
